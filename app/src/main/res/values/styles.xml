<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.DeviceDefault">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/blue</item>
        <item name="android:colorBackground">@color/blue2</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:panelFullBackground">#FFFFFF</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupWindowStyle">@style/PopupWindow</item>
        <item name="android:textColor">#000000</item>
        <item name="android:popupBackground">#000000</item>
    </style>


    <style name="PopupWindow" parent="@android:style/Widget.PopupWindow">
    </style>

</resources>
